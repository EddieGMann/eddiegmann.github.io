<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Simple Add/Subtract Tracker</title>
</head>
<body>
  <h1>Simple Tracker</h1>
  <span id="total">0</span>
  <br />
  <input type="number" id="amount" placeholder="Amount" />
  <br />
  <button onclick="updateTotal('add')">Add</button>
  <button onclick="updateTotal('subtract')">Subtract</button>

  <script>
    // Load saved total or initialize to 0
    let total = Number(localStorage.getItem('savedTotal')) || 0;
    const totalDisplay = document.getElementById('total');
    const amountInput = document.getElementById('amount');

    // Display initial total
    totalDisplay.textContent = total;

    function updateTotal(action) {
      const amount = Number(amountInput.value);
      if (isNaN(amount)) return;

      if (action === 'add') {
        total += amount;
      } else if (action === 'subtract') {
        total -= amount;
      }

      totalDisplay.textContent = total;
      localStorage.setItem('savedTotal', total);
      amountInput.value = '';
    }
  </script>
</body>
</html>
